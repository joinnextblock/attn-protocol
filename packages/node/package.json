{
  "name": "@attn/node",
  "version": "0.1.1",
  "description": "Streams Bitcoin ZeroMQ blocks to Nostr relays as ATTN-01 snapshots",
  "author": "NextBlock",
  "license": "MIT",
  "type": "module",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/joinnextblock/attn-protocol"
  },
  "keywords": [
    "bitcoin",
    "nostr",
    "zeromq",
    "blockchain",
    "bridge",
    "nextblock",
    "attn-protocol"
  ],
  "bin": {
    "attn-node": "index.js"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "vitest run",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:rebuild": "docker compose up -d --build"
  },
  "dependencies": {
    "@attn/ts-sdk": "file:../sdk",
    "@dotenvx/dotenvx": "^1.51.1",
    "dotenv": "^17.2.3",
    "nostr-tools": "^2.17.0",
    "pino": "^9.5.0",
    "pino-pretty": "^11.2.2",
    "ws": "^8.18.3",
    "zeromq": "^6.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/ws": "^8.5.10",
    "@types/zeromq": "^6.0.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "vitest": "^2.1.9",
    "nodemon": "^3.0.2"
  }
}
