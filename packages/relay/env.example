# ATTN Protocol Relay Environment Configuration
# Copy this file to .env and update with your values

# Relay Configuration
RELAY_NAME=ATTN Protocol Relay
RELAY_DESCRIPTION=Open-source ATTN Protocol relay
RELAY_PUBKEY=
RELAY_PRIVKEY=
RELAY_CONTACT=
RELAY_PORT=8008
RELAY_DOMAIN=localhost

# Storage Configuration
STORAGE_TYPE=sqlite
# For Docker: use /data/relay.db (volume mount point)
# For local: use ./relay.db or absolute path
SQLITE_DB_PATH=/data/relay.db

# Plugin Configuration
AUTH_PLUGIN=none

# Logging
LOG_LEVEL=INFO

# Rate Limiting
# Rate limit time window (default: 1m)
RATE_LIMIT_WINDOW=1m
# Rate limiter cleanup interval (default: 5m)
RATE_LIMITER_CLEANUP_INTERVAL=5m

